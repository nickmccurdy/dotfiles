[user]
	name = Nicolas McCurdy
	email = thenickperson@gmail.com
	signingkey = 2AD315D8

[alias]
	uncommit = reset --soft HEAD^
	wdiff = diff --color-words
	wshow = show --color-words

[apply]
	whitespace = warn

[color]
	ui = auto

[color "status"]
	added = green
	changed = yellow
	untracked = red

[core]
	autocrlf = input #set this to "input" on Mac/Linux and "true" on Windows
	excludesfile = ~/.gitignore

[credential]
	helper = osxkeychain

[credential "https://github.com"]
	username = nicolasmccurdy

[credential "https://gist.github.com"]
	username = nicolasmccurdy

[credential "https://bitbucket.org"]
	username = thenickperson

[diff]
	renames = copies

[grep]
	lineNumber = true
	extendedRegexp = true

[format]
	pretty = oneline

[interactive]
	singlekey = true

[log]
	abbrevCommit = true
	decorate = short

[merge]
	tool = vimdiff
	defaultToUpstream = true

[push]
	default = current

[status]
	branch = true
	short = true
